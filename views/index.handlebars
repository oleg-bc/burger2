<div class="center bg">
    <div id="container">
        <div id="center">
            <div class="top-part center">
                 <h1>B U R G E R S (the app)</h1>
                <img src="https://hips.hearstapps.com/esq.h-cdn.co/assets/17/01/1483576575-big-kahuna.jpg?resize=368:*"
                    alt="mmm hmmm this is a tasty burger">
            </div>
        </div>

        <div id="left">
            <div class="middle-section">
                <div class="not-devoured">
                    <h2 class="h2L">Burgers </h2>
                    <ul>blabla
                        {{#each burgers}}
                        {{this.name}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true burgerName=name id=id}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div id="right">
            <div class="devoured">
                <h2>Burgers that are devoured!</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

    </div>

    <div class="form center">
        <form class="create-form">
            <h2>Add a Burger</h2>
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            {{!-- <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> NOT-Devoured
            </div> --}}

            <button type="submit">Add Burger</button>
        </form>
    </div>

</div>